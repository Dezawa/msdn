#!/usr/bin/ruby

require 'yaml'

def toYaml(object,path)
    objects = case object
         when Class
    	    object.all
	 else
            [object]
         end
   open(path,"w"){|fp|
     objects.each_with_index{|obj,idx|
       yml=YAML.dump(obj).sub(/\A.*attributes:\n/m,"").
                gsub(/^.*:\s*('')?s*$\n/,"")
       fp.puts "obj#{idx+1}"
       fp.print yml
     }
  }
end

#YAML.dump(User.first)
toYaml(User,"/tmp/testfile2")